<% if (errors.length > 0) { %>

    <div class="row">
        <div class="col my-3">
            <div class="alert alert-danger fs-6 fw-semibold d-flex flex-column gap-1">

                <% for (let index in errors) { %>
                    <span> 
                        <%=errors[index]%> <br> 
                    </span>
                <% } %>

            </div>
        </div>
    </div>

<% } %>

<% if (success.length > 0) { %>

    <div class="row">
        <div class="col my-3">
            <div class="alert alert-success fs-6 d-flex flex-column gap-1">

                <% for (let index in success) { %>
                    <span> 
                        <%= success[index]%> <br> 
                    </span>
                <% } %>
                
            </div>
        </div>
    </div>

<% } %>