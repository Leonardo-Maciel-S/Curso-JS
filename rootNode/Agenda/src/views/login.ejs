<%- include('includes/head')%>
<%- include('includes/nav')%>

<div class="container">
    <div class="row ">
        <div class="col-lg-2"></div>
        
        <div class="col-lg-8 my-3 display-1">
            <h1 class="display-1 text-center">Login</h1>
            <p class="text-center lead">Faça login ou crie sua conta</p>

            <%- include('includes/messages')%>

            <div class="row text-center gap-5">

                <div class="col-lg border p-4">
                    <h4>Faça seu cadastro</h4>
                    <p class="text-center lead fs-6">Se não possui uma conta crie aqui</p>

                    <form action="/login/register" method="POST" class="fs-4 form-register">
                        <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                        <div class="form-group">
                          <label for="exampleInputEmail1" class="fs-5">Endereço de email</label>
                          <input type="email" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Seu email">
                        </div>
                        <div class="form-group my-3">
                          <label for="exampleInputPassword1" class="fs-5">Senha</label>
                          <input type="password" name="password" class="form-control" id="exampleInputPassword1" placeholder="Senha">
                        </div>
                        <button type="submit" class="btn btn-primary m-2">Criar conta</button>
                      </form>
                </div>

                <div class="col-lg border p-4">
                    <h4 class="">Entrar no sistema</h4>
                    <p class="text-center lead fs-6">Se possui uma conta acesse aqui</p>

                    <form action="/login/login" method="POST" class="fs-4 form-login">
                        <input type="hidden" name="_csrf" value="<%=csrfToken%>">

                        <div class="form-group">
                          <label for="exampleInputEmail1"  class="fs-5">Endereço de email</label>
                          <input type="email" name="email" class="form-control" name="email" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Seu email">
                        </div>

                        <div class="form-group my-3">
                          <label for="exampleInputPassword1" class="fs-5">Senha</label>
                          <input type="password" name="password" class="form-control" id="exampleInputPassword1" placeholder="Senha">
                        </div>
                        <button type="submit" class="btn btn-primary m-2">Entrar</button>
                      </form>
                </div>

            </div>

        </div>
        
        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer') %>