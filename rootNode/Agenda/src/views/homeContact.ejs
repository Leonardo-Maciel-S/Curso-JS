<%- include('includes/head')%>
<%- include('includes/nav')%>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        
        <div class="col-lg-8 my-3">
            <h1 class="text-center">Cadastrar Contato</h1>
            
            <% if(user) { %>
                <p class="text-center lead">Preencha o formulário abaixo</p>

            <% } else { %>
                <p class="text-center lead">Faça login para ver contatos</p>   
            <% } %>

            <%- include('includes/messages') %>

            <% if(!contact._id) { %>
                <form action="/contact/register" method="POST" class="d-flex flex-column gap-6">
            <% } else { %>
                <form action="/contact/edit/<%=contact._id%>" method="POST" class="d-flex flex-column gap-6">
            <% } %>

                <input type="hidden" name="_csrf" value="<%=csrfToken%>">

                <div class="form-group my-2">
                  <label for="name">Nome</label>
                  <input type="text" value="<%=contact.name%>" name="name" class="form-control" aria-describedby="emailHelp" placeholder="Nome">
                </div>

                <div class="form-group my-2">
                  <label for="lastName">Sobrenome</label>
                  <input type="text" value="<%=contact.lastName%>" name="lastName" class="form-control" placeholder="Sobrenome">
                </div>

                <div class="form-group my-2">
                    <label for="email">Email</label>
                    <input type="email" value="<%=contact.email%>" name="email" class="form-control" placeholder="Email">
                </div>

                <div class="form-group my-2">
                    <label for="number">Telefone</label>
                    <input type="tel" value="<%=contact.number%>" name="number" class="form-control" placeholder="Numero">
                </div>

                <button type="submit" class="btn btn-primary my-2">Salvar</button>
              </form>

        </div>
        
        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer') %>